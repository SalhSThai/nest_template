  "version": "0.2.0",
  "configurations": [
    {
      "name": "nest_template",
      "type": "node",
      "request": "launch",
      "args": ["${workspaceFolder}/api/src/main.ts"],
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register", "-r", "tsconfig-paths/register"],
